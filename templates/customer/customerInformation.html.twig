{% extends 'baseLogged.html.twig' %}

{% block body %}
    <p>{{ customer.name }}'s informations</p>
    <p>Name : {{ customer.name }}</p>
    <p>Firstname : {{ customer.firstName }}</p>
    <p>Email :
    {% if customer.email %}
        {{ customer.email }}
    {% else %}
        Unknow
    {% endif %}
    </p>
    <p>Phone number : {% if customer.phoneNumber %}
            {{ customer.phoneNumber }}
        {% else %}
            Unknow
        {% endif %}
    </p>
    <a href="{{ path('app_edit_customer', { id : customer.id }) }}">Edit</a>
    <h1>Note</h1>
    {% if note == null %}
        <p>Any note</p>
    {% else %}
        <p>{{ note.text}}</p>
    {% endif %}
    <a href="{{ path('app_add_note', { id : customer.id }) }}">Add note</a>
{% endblock %}
